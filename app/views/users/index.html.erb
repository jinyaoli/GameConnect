<div class = "container">
  <div class = "row">
    <div class = "col-md-8 col-md-offset-2">
      <h1 class = "text-center">GameConnect</h1>
      <p class = "text-center">Welcome to the GameConnect. Users must fill out a their profile to be visible to everyone else.</p>
      <ul class = "list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile%>
            <li>
              <div class = "well row <%= cycle('white-bg', '')%>">
                <div class = "col-sm-4 text-center">
                  <% if user.profile.avatar %>
                    <%= link_to user do %>
                      <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                    <% end %>
                  <% end %>
                </div>
                <div>
                  <%= link_to user do%>
                    <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                  <% end %>
                  <p>
                    <%= user.profile.game_title %>
                    <% if user.plan_id == 2%>
                      <span class = "label label-danger">PRO</span>
                    <% end %>
                  </p>
                  
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>